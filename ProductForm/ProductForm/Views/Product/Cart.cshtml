@Model List <ProductForm.Models.Entity.Product>
    @{
        ViewBag.Title = "Cart";
    }

    <h2>Cart</h2>

    <a href="/Product/index" class="btn btn-primary">Add More</a>


    <form action="/Product/cart" method="post">
        <table class="table table-striped table-hover">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Price</td>
                <td>Quantity</td>
                <td>Description</td>
            </tr>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                    <td>@p.Quantity</td>
                    <td>@p.Description</td>

                </tr>
            }

        </table>
        <input type="submit" value="Checkout" class="btn btn-warning">
    </form>

