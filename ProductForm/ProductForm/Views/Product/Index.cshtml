@Model List<ProductForm.Models.Entity.Product>
    @{
        ViewBag.Title = "Index";
    }

    <h2>Index</h2>

    <a href="/Product/create" class="btn btn-primary">Add Product</a>
    <table class="table table-striped table-hover">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Price</td>
            <td>Quantity</td>
            <td>Description</td>
            <td>Action</td>
            <td>Cart</td>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Quantity</td>
                <td>@p.Description</td>
                <td>
                    <a href="/Product/edit/@p.Id" class="btn btn-success">Update</a>
                    <a href="/Product/delete/@p.Id" class="btn btn-danger">Delete</a>
                </td>
                <td>
                    <a href="/Product/cart/@p.Id" class="btn btn-warning">Add to Cart</a>
                </td>
            </tr>
        }
    </table>
